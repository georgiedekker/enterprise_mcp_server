# Enterprise MCP Server Environment Configuration
# Copy this file to .env and update the values for your environment

# === Database Configuration ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=enterprise_mcp_server
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_MIN_SIZE=2
POSTGRES_POOL_MAX_SIZE=10

# === Redis Configuration ===
REDIS_URL=redis://redis:6379

# === Server Configuration ===
HOST=0.0.0.0
PORT=8033
LOG_LEVEL=INFO
CORS_ALLOWED_ORIGINS=https://app.cursor.sh,https://cursor.sh,http://localhost:*,http://127.0.0.1:*

# === Security Configuration ===
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# === MCP Client Authentication ===
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret

# === API Gateway Configuration ===
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
ENTERPRISE_MCP_PORT=8033
ENTERPRISE_MCP_SERVER_URL=http://enterprise-mcp-server:8033
MCP_SERVER_NAME=Enterprise MCP Gateway Server
DEFAULT_RATE_LIMIT=100

# === Claude Code CLI Configuration ===
# Path to Claude configuration directory (usually ~/.claude)
CLAUDE_CONFIG_PATH=/root/.claude

# Authentication method: 'oauth' (browser-based) or 'api_key' (direct)
CLAUDE_AUTH_METHOD=oauth

# Timeout for Claude CLI operations (seconds)
CLAUDE_CLI_TIMEOUT=300

# Optional: Direct API key authentication (if supported by Claude CLI)
# CLAUDE_API_KEY=your-claude-api-key-here

# Optional: Custom OAuth settings for enterprise environments
# CLAUDE_OAUTH_URL=https://claude.ai/auth
# CLAUDE_CALLBACK_PORT=8765

# === Development & Debugging ===
# Skip sandboxing for development (SECURITY RISK in production!)
SKIP_SANDBOX=false

# Python settings
PYTHONUNBUFFERED=1

# Docker environment detection
# RUNNING_IN_DOCKER=true

# === Optional: Advanced Configuration ===

# Claude Code SDK settings
# CLAUDE_SDK_DEBUG=false
# CLAUDE_SDK_RETRY_ATTEMPTS=3

# Tool execution settings
# MAX_TOOL_EXECUTION_TIME=600
# ALLOWED_TOOLS=Read,Write,Bash,Grep,LS

# Audit and monitoring
# AUDIT_LOG_RETENTION_DAYS=90
# ENABLE_PROMETHEUS_METRICS=false

# Network and proxy settings (if needed)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,.local

# === Production Settings ===
# Set these in production for better security and performance

# Strong JWT secret (generate with: openssl rand -hex 32)
# JWT_SECRET_KEY=

# Production database settings
# POSTGRES_PASSWORD=strong-random-password
# POSTGRES_SSL_MODE=require

# Production Redis settings  
# REDIS_PASSWORD=redis-password
# REDIS_SSL=true

# CORS settings for production
# CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Logging level for production
# LOG_LEVEL=WARNING

# Rate limiting for production
# DEFAULT_RATE_LIMIT=50